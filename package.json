  "name": "jacobjove",
  "prettier": {
    "printWidth": 110,
    "proseWrap": "always"
  },
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "docker compose up -d mongo && PORT=$(grep '^PORT=' .env | cut -d '=' -f2) next dev",
    "docker:build": "docker compose build",
    "docker:start": "pnpm kill; docker compose up -d && docker compose logs -f",
    "format": "prettier -w . && eslint --fix .",
    "kill": "npx kill-port $(grep '^PORT=' .env | cut -d '=' -f2); docker compose down",
    "lint": "next lint",
    "start": "PORT=$(grep '^PORT=' .env | cut -d '=' -f2) next start",
    "test": "jest --passWithNoTests",
    "prepare": "if [ ! $DOCKERIZED = true ]; then npx husky install; fi"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-tailwindcss"
    ]
  },
  "version": "1.0.0",
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0",
    "pnpm": ">=8.15.3"
  },
  "pnpm": {
    "supportedArchitectures": {
